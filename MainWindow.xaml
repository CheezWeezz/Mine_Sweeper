<Window x:Class="MineSeeperProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineSeeperProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Background="#FFFFFFEB" Margin="0,18,0,0" d:IsLocked="True"/>
        <Menu Margin="0,0,0,416" Background="#FF4E4E4E" Foreground="White" d:IsLocked="True">
            <MenuItem Header="File"/>
            <MenuItem Header="New Game" Click="MenuItem_Click"/>
        </Menu>
        <Grid x:Name="boardGrid" Margin="136,32,136,13" Background="#FFC3C0C0"/>
    </Grid>
</Window>
